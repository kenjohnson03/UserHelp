{
  "Categories": [
    {
      "Name": "Applications",
      "Description": "Application repair actions",
      "UserActions": [
        {
          "Title": "Run a file",
          "CommandArguments": "-File C:\\ProgramData\\UserHelp\\Testing.ps1",
          "Description": "Run a script from the root folder"
        },
        {
          "Title": "Run a command",
          "CommandArguments": "-Command \"&{ get-process |? { $_.name -like 'p*'} | ogv -passthru -Title 'Pick your process'}\"",
          "Description": "Simple command that outputs all of the processes that start with P"
        },
        {
          "Title": "Invoke a command",
          "CommandArguments": "-Command \"&{ Invoke-Command { Get-Process }}\"",
          "Description": "Shows all running processes"
        }
      ]
    },
    {
      "Name": "Drivers",
