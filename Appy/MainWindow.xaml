<Window x:Class="Appy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Appy"
        mc:Ignorable="d"
        Title="User Help" Height="550" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="17"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Name="NavigationFrame" NavigationUIVisibility="Hidden"/>
        <StatusBar Grid.Row="1" HorizontalAlignment="Right" Background="Transparent">
            <TextBlock Margin="0" Padding="0" HorizontalAlignment="Right" Text="Made in the USA" FontSize="9" ToolTip="God Bless America!" Background="Transparent"/>
        </StatusBar>

    </Grid>
</Window>
